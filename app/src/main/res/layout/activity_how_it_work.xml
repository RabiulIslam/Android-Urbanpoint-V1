<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/how_it_work_background"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actionBarHeightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/here_how_it_works_header"
            android:textColor="@color/white"
            android:textSize="@dimen/sp28"
            android:textStyle="normal"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actionBarHeightLayout"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:src="@mipmap/iphone" />

                <TextView

                    style="@style/view_20"

                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp100"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/dp2"
                    android:text="@string/how_to_work_one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:src="@mipmap/sale" />

                <TextView
                    style="@style/view_20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp100"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/dp5"
                    android:text="@string/how_to_work_two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:src="@mipmap/like" />

                <TextView
                    style="@style/view_20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp100"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/dp2"
                    android:text="@string/how_to_work_three"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:src="@mipmap/heart" />

                <TextView
                    style="@style/view_20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp100"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/dp5"
                    android:text="@string/how_to_work_four"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/letsGoToApp"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:background="@drawable/custom_round_button"
                    android:contentDescription="@string/lets_go"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:text="@string/lets_go"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>