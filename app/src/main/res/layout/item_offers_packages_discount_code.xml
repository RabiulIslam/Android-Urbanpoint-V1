<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/custom_round_gray_button"
            android:hint="@string/offer_packages_enter_discount_code"
            android:paddingLeft="@dimen/dp10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/changePinButton"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp30"
            android:layout_weight="1"
            android:background="@drawable/round_tabs_custom"
            android:orientation="horizontal"
            android:text="@string/apply_code" />
    </LinearLayout>

</RelativeLayout>