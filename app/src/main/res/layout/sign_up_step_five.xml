<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_background">

    <include
        android:id="@+id/actionBarHeightLayout"
        layout="@layout/blank_layout_height" />
    <!--This layot was only for vodafone customer now its chnge to
    vodafone and ooredoo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@+id/actionBarHeightLayout"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/logoContentDescription"
            android:src="@mipmap/vodafone_logo"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vodafone_gray_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:layout_gravity="center"
                android:contentDescription="@string/logoContentDescription"
                android:padding="@dimen/dp5"
                android:src="@mipmap/vodafone_logo" />

            <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.CustomTextView
                style="@style/view_20"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/sign_up_step_four_message"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp60"
            android:layout_marginRight="@dimen/dp60"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/iv_vodafoneYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/vodafone_yes_default" />

                    <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.CustomTextView
                        style="@style/view_20"
                        android:text="@string/yes"

                        android:textAllCaps="true"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_vodafoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/vodafone_no_default" />

                    <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.CustomTextView
                        style="@style/view_20"
                        android:text="@string/no"

                        android:textAllCaps="true"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/actionBarHeightLayout"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@mipmap/up_logo" />



        <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/view_20"
            android:layout_marginTop="@dimen/dp30"
            android:text="@string/choose_network"
            android:textAlignment="center"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/frg_sign_up_five_rl_vodofone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_vodafone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/vodafone_logo" />
                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_vodafone_large"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/vodafone_logo"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/frg_sign_up_five_txv_vodafone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:text="@string/header_vodafone"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_vodafone_selector_tick"
                    android:layout_below="@+id/frg_sign_up_five_txv_vodafone"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/tick_network_selector"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frg_sign_up_five_rl_ooredoo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_ooredoo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/ooredoo_logo" />
                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_ooredoo_large"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/ooredoo_logo"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/frg_sign_up_five_txv_ooredoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:text="@string/header_ooredoo"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

                <ImageView
                    android:id="@+id/frg_sign_up_five_imv_ooredoo_selector_tick"
                    android:layout_below="@+id/frg_sign_up_five_txv_ooredoo"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/tick_network_selector"
                    android:visibility="gone"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp10">

            <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.ButtonView
                android:id="@+id/signUpStepFourBackButton"
                style="@style/button_style"
                android:layout_width="@dimen/dp100"
                android:background="@drawable/custom_round_button"
                android:contentDescription="@string/back"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@drawable/change_text_color_on_button_pressed" />

            <View
                android:layout_width="@dimen/dp80"
                android:layout_height="match_parent" />

            <com.urbanpoint.UrbanPoint.views.customViews.customFontViews.ButtonView
                android:id="@+id/signUpStepFourContinueButton"
                style="@style/button_style"
                android:layout_width="@dimen/dp100"
                android:background="@drawable/custom_round_button"
                android:contentDescription="@string/continue_button"
                android:text="@string/continue_button"
                android:textAllCaps="false"
                android:textColor="@drawable/change_text_color_on_button_pressed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp10">

            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_fill_view" />

            <View
                android:layout_width="@dimen/dp5"
                android:layout_height="match_parent" />

            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_fill_view" />

            <View
                android:layout_width="@dimen/dp5"
                android:layout_height="match_parent" />

            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_fill_view" />

            <View
                android:layout_width="@dimen/dp5"
                android:layout_height="match_parent" />
            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_fill_view" />

            <View
                android:layout_width="@dimen/dp5"
                android:layout_height="match_parent" />

            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_view" />

            <View
                android:layout_width="@dimen/dp5"
                android:layout_height="match_parent" />

            <View
                style="@style/button_style"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:background="@drawable/custom_circle_view"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>