<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <include
        android:id="@+id/actionBarHeightLayout"
        layout="@layout/action_bar_layout_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBarHeightLayout"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginTop="@dimen/dp20"
        android:paddingTop="@dimen/dp20"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="3">


        <TextView
            android:id="@+id/act_purchase_sucess_txv_offr"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/act_purchase_sucess_txv_merchnt"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/sp15"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/act_purchase_sucess_txv_outlet"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:hint=""
            android:textAlignment="center"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionBarHeightLayout"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_confirmation_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/confirmation_code"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txtView_confirmation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="-asasdsa"
                android:textColor="@color/black"
                android:textSize="@dimen/sp50" />

            <TextView
                android:id="@+id/currentDateOfRedeemed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />

            <Button
                android:id="@+id/act_purchase_sucess_btn_rate"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_height="@dimen/dp60"
                android:background="@drawable/rounded_edge_purple_button"
                android:text="@string/rate_experience"
                android:textSize="@dimen/sp22" />

            <TextView
                android:id="@+id/act_purchase_sucess_txv_goto_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/go_to_home"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>