<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/actionBarHeightLayout"
        layout="@layout/action_bar_layout_height" />


    <RelativeLayout
        android:id="@+id/mainParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBarHeightLayout">


        <LinearLayout
            android:id="@+id/frg_profile_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/gray_bg"
            android:orientation="vertical">

            <include
                android:id="@+id/actionBarHeightLayout"
                layout="@layout/blank_layout_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/subscription_sucess_txv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="15dp"
                    android:text="@string/offer_subscribe_sucess"
                    android:textAlignment="center"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/subscription_sucess_txv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="15dp"
                    android:text="@string/offer_subscribe_sucess_alomost_there"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/subscription_sucess_txv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="15dp"
                    android:text="@string/offer_subscribe_sucess_msg"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:background="@mipmap/subscribe_sucess" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/subscribeSuccessHome"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp50"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:background="@drawable/rounded_edge_purple_button"
                    android:text="@string/lets_go" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/subscribeSuccessCross"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:background="@mipmap/close_purple"
        android:visibility="visible" />


</RelativeLayout>